@model PaymentModel

<h1>Оплатить путшешествие №@ViewBag.Travel.Id</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <p>Остаток: @ViewBag.LeftSum</p>
    <p>Сумма: <input type="number" min="1" max="@ViewBag.LeftSum" name="Model.Sum" /></p>
    <input type="hidden" name="Model.TravelId" value="@((int)ViewBag.Travel.Id)" />
    <button type="submit">Оплатить</button>
}