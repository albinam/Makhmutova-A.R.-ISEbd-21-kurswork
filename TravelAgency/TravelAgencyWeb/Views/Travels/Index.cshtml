@model IEnumerable<TravelAgencyBusinessLogic.ViewModel.TravelViewModel>

@{
    ViewBag.Title = "Список машин";
}

<h2>Список машин</h2>

<p>
    <div>@Html.ActionLink("Весь список", "Index")</div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TravelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinalCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TravelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
